
@model LoginViewModel

    <h1>Login page</h1>

    <form action="/Login" method="post">
        <input asp-for="@Model.Email" />
        <input asp-for="@Model.Password" />
        <input type="hidden" value="@ViewBag.ReturnUrl" />
        <button type="submit">Login</button>
    </form>

@if (Model?.Email != null)
            {
                <p>Hey @Model.Email</p>
            }